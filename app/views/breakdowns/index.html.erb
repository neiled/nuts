<div class="container">
  <div class="row">
    <div class="panel panel-default">
      <div class="panel-heading">
          <h1>Oustanding Payments</h1>
      </div>
      <div class="panel-body">
        <table class="table">
          <th>Name</th>
            <% for item in @outstanding_payments %>      
                <tr>
                    <td><%= link_to item.name, breakdown_path(item) %></td>
                </tr>
            <% end %>
        </table>
      </div>
    </div>
  </div>    
  <div class="row">
    <div class="panel panel-default">
      <div class="panel-heading">
          <h1>Breakdowns</h1>
      </div>
      <div class="panel-body">
        <table class="table">
          <th>Name</th>
            <% for item in @breakdowns %>      
                <tr>
                    <td><%= link_to item.name, breakdown_path(item) %></td>
                </tr>
            <% end %>
        </table>
      </div>
    </div>
  </div>
</div>
