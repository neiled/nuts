<div class="container">
  <div class="panel panel-primary">
    <div class="panel-heading">New Breakdown</div>
    <div class="panel-body">
      <%= simple_form_for @breakdown do |f| %>
        <%= f.error_notification %>

        <%= f.input :name %>
        <%= f.input :description %>

        <%= f.button :submit %>

      <% end %>

    </div>
  </div>
</div>
