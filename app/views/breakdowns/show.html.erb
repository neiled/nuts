<div class="container">
  <h1><%= @breakdown.name %></h1>
  <h5><%= @breakdown.description %></h5>
  <%= link_to "Edit", edit_breakdown_path(@breakdown), class: "btn btn-default" %>
  <%= link_to "Talent List", talents_path, class: "btn btn-primary" %>
  <div class="panel panel-default">
    <div class="panel-heading">Choose Talent</div>
    <div class="panel-body">
      <p>Choose the talent to submit from the table below.</p>
    </div>
    <table class="table">
      <th>Photo</th>
      <th>Surname</th>
      <th>First Name</th>
      <th>Age</th>
      <th>Permit Expires</th>
      <th>Choose</th>

      <% for item in @talents %>
        <tr>
          <td><img data-src="holder.js/80x80"></td>
          <td><%= item.last_name %></td>
          <td><%= item.first_name %></td>
          <td><%= item.age %></td>
          <td><%= item.permit_expires %></td>
          <td><%= button_to "Choose", create_pick_path(@breakdown, item), class: "btn btn-primary" %></td>
        </tr>
      <% end %>

    </table>

  </div>
  <div class="panel panel-default">
    <div class="panel-heading">Choosen Talent</div>
    <div class="panel-body">
      <p>Chosen talent will be shown here.</p>
    </div>
    <table class="table">
      <th>Photo</th>
      <th>First Name</th>
      <th>Surname</th>
      <th>Age</th>
      <th>Delete</th>

      <% for item in @chosen %>
        <tr>
          <td><img data-src="holder.js/80x80"></td>
          <td><%= item.first_name %></td>
          <td><%= item.last_name %></td>
          <td><%= item.age %></td>
          <td><%= button_to "Unpick", create_pick_path(@breakdown, item), class: "btn btn-danger", method: :delete %></td>
        </tr>
      <% end %>

    </table>

  </div>
</div>
