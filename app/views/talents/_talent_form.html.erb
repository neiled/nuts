<%= simple_form_for @talent do |f| %>
  <%= f.error_notification %>

  <%= f.input :first_name %>
  <%= f.input :middle_name %>
  <%= f.input :last_name %>
  <%= f.input :date_of_birth, as: :date, start_year: Date.today.year - 90,
                              end_year: Date.today.year,
                              order: [:day, :month, :year] %>
  <%= f.input :permit_expires %>

  <%= f.button :submit %>

<% end %>
