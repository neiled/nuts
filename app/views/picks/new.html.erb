<div class="container">
<p>Adding <%= @talent.full_name %> to <%= @breakdown.name %></p>
<p>Here you will select the pictures to use and then click create.</p>

<%= form_for @pick do |f| %>
  <%= f.hidden_field :breakdown_id, :value => @breakdown.id %>
  <%= f.hidden_field :talent_id, :value => @talent.id %>

  <% @talent.photos.each do |photo, index| %>
    <div class="checkbox">
      <label for=""><input type="checkbox" name="photos[<%= index %>]" value="<%= photo.id %>" >
        <%= image_tag photo.url(:thumb) %>
      </label>
    </div>
  <% end %>
  <%= f.submit %>
<% end %>


<p>
</p>
</div>
